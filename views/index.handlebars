<div class="container">
    <div class="row">
        <h1>Burger Time</h1>
        <p> What would you like to eat?
        <p> I hope it's burgers.

    </div>
    <ul>
        {{#each burgers}}
        {{#unless this.devoured}}
        <div class="text-center">
            {{this.id}}.{{this.burger_name}}
        </div>
        <div class="col-md-3 text-center">
            <form class="devour-form button-size">
                <input input type="hidden" class="burger_id" type="text" value={{this.id}}><br>
                <button type="submit" class="btn btn-default">Eat it!</button>
            </form>
        </div>
        {{/unless}}
        {{/each}}
    </ul>

</div>
